<ul class="navbar-nav my-2 my-lg-0">

    @if (Request.IsAuthenticated)
    {
        // kullanıcı eğer login olduysa adını ve logout linklerini çıkar
        <li class="nav-item active">
            <a class="nav-link" href="/">@User.Identity.Name</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="/Account/Logout"></a>
        </li>
    }
    else
    {
        // kullanıcı eğer login değilse login ve register linklerini çıkar
        <li class="nav-item active">
            <a class="nav-link" href="/Account/Login">Login <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="/Account/Register">Register <span class="sr-only">(current)</span></a>
        </li>
    }

</ul>
